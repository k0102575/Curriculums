/* 소켓 프로그래밍: 서버 소켓 대기열(클라이언트) 확인 */

package step18;

import java.io.InputStream;
import java.io.OutputStream;
import java.net.Socket;
import java.util.Scanner;

public class Test02_2 {
  public static void main(String[] args) throws Exception {
    System.out.println("step18 Test02_2 클라이언트 실행중");
    System.out.println();
    
    Scanner keyScanner = new Scanner(System.in);
    
    // 1) 접속할 서버 주소 입력 받기
    
    System.out.print("서버 주소: ");
    String serverAddress = keyScanner.nextLine();
    
    // 2) 접속할 서버의 포트 번호 입력 받기
    System.out.print("포트 번호: ");
    int port = Integer.parseInt(keyScanner.nextLine());
    
    // 3) 사용자로 부터 입력 받은 값을 가지고 서버에 접속한다.
    
    Socket socket = new Socket(serverAddress, port);
    
    InputStream in = socket.getInputStream();
    OutputStream out = socket.getOutputStream();
    
    in.close();
    out.close();
    socket.close();
    
  }  // main
}
