package bitcamp.java93.control;

import javax.servlet.http.Cookie;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.SessionAttributes;

import bitcamp.java93.domain.Member;
import bitcamp.java93.service.TeacherService;

@Controller
@RequestMapping("/auth/login")
@SessionAttributes({"loginMember"})
public class LoginControl {
  @Autowired
  TeacherService teacherService;

  @RequestMapping(method=RequestMethod.GET)
  public void form() {}
  
  @RequestMapping(method=RequestMethod.POST)
  public String service(String userType, String email, String password, String saveEmail, Model model) throws Exception {
    Member member = null;

    if (userType.equals("teacher")) {
      member = teacherService.getByEmailPassword(email, password);
    }

    if (member != null) {

      model.addAttribute("loginMember", member);

      String saveEmail = req.getParameter("saveEmail");
      if (saveEmail != null) {
        Cookie cookie2 = new Cookie("email", email);
        cookie2.setMaxAge(60 * 60 * 24 * 7);
        res.addCookie(cookie2);
      } else {
        Cookie cookie2 = new Cookie("email", "");
        cookie2.setMaxAge(0);
        res.addCookie(cookie2);
      }

      return "redirect:../teacher/list.do";
      
    } else {

      return "auth/fail";

    }


  } // service()


}
