package step20;

import java.sql.DriverManager;
import java.sql.Statement;

public class Test05_1 {
  
  
  public static void main(String[] args) throws Exception {
    Statement stmt = null;
    Connection con = null;

    System.out.println("step20 Test05_1 실행중");System.out.println();
    
    try {
      String dirverClassName = System.getProperty("jdbc.driver");
      Class.forName(dirverClassName);
    } catch (Exception e) {
      e.printStackTrace();
    }
    
    try(
    java.sql. = DriverManager.getConnection(
        "jdbc:mysql://localhost:3306/webappdb", 
        "webapp",
        "1111");
    
    stmt = con.createStatement();
    ) {
    int count = stmt.executeUpdate("insert into memb(name,tel,email,pwd) "
        + "values('하하하', '1212-1313', 'haha@test.com', password('1111'))");
    
    System.out.println(count);
    
    stmt.close();
    con.close();
    
  }

}
